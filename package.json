{
  "name": "semantic-release-tamia",
  "description": "Custom scripts for semantic-release",
  "version": "0.0.0-development",
  "scripts": {
    "test": "true && npm run test:jest",
    "semantic-release": "semantic-release --analyze-commits ./analyzeCommits --verify-release ./verifyRelease --generate-notes ./generateNotes",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write '**/*.{js,md}'",
    "posttest": "npm run format"
  },
  "author": "Artem Sapegin <artem@sapegin.ru> (http://sapegin.me/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamiadev/semantic-release-tamia.git"
  },
  "dependencies": {
    "@semantic-release/error": "~2.1.0",
    "conventional-commits-parser": "^2.1.0",
    "indent": "0.0.2",
    "opn": "~5.1.0",
    "shell-escape": "^0.2.0"
  },
  "devDependencies": {
    "jest": "^22.0.4",
    "prettier": "^1.9.2",
    "semantic-release": "~11.0.2"
  },
  "engines": {
    "node": ">=8"
  },  
  "files": [
    "lib",
    "analyzeCommits.js",
    "generateNotes.js",
    "verifyRelease.js"
  ]
}
